<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved!</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>

  <p><%= f.label :text %></p>
  <p><%= f.text_area :text %></p>

  <p><%= f.label :is_event %></p>
  <p><%= f.radio_button :is_event, true %></p>
  <p><%= f.label :is_event, "True", :value => "true" %></p>
  <p><%= f.radio_button :is_event, false %></p>
  <p><%= f.label :is_event, "False", :value => "false" %></p>
  <%= f.submit %>



<% end %>
