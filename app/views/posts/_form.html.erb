<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved!</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="forminputs">
    <div class="form-group">
      <p><%= f.label :title %></p>
      <p><%= f.text_field :title, class: "form-control" %></p>
    </div>

    <div class="form-group">
      <p><%= f.label :summary %></p>
      <p><%= f.text_area :summary, class: "form-control" %></p>
    </div>

    <div class="form-group">
      <p><%= f.label :text %></p>
      <p><%= f.text_area :text, class: "form-control" %></p>
    </div>

    <div class="checkbox">
      <%= f.label :is_event, "Is this an event?" %>
      <%= f.check_box :is_event %>
    </div>

    <div class="form-group">
      <p><%= f.label :event_date, "Event date:" %></p>
      <p><%= f.date_select :event_date %></p>
    </div>

    <%= f.submit 'Submit', :class => "btn btn-primary" %>
  </div>


<% end %>
