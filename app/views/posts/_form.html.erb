<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved!</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="forminputs">
    <p><%= f.label :title %></p>
    <p><%= f.text_field :title %></p>

    <p><%= f.label :text %></p>
    <p><%= f.text_area :text %></p>

    <p><%= f.label :summary %></p>
    <p><%= f.text_area :summary %></p>

    <p><%= f.check_box :is_event %></p>

    <p><%= f.date_select :event_date %></p>
    <%= f.submit %>
  </div>


<% end %>
